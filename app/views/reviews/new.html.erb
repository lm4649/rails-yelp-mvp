<div class="container">
  <div class="col">
    <h1>Add review for <%= @restaurant.name %></h1>
    <div class="form">
      <%= form_for [@restaurant, @review] do |f| %>
          <div class="form-group">
            <%= f.label :content %>
            <%= f.text_field :content %>
          </div>
          <div class="form-group">
            <%= f.label :rating %>
            <%= f.number_field :rating %>
          </div>
          <%= f.submit "Submit review", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
