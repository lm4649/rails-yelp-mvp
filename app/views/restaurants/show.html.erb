<div class="container">
  <div class="col">
    <div class="card-product">
      <div class="product-info">
        <h1>🍽️ <%= @restaurant.name %> 🍽️</h1>
        <p>🏢️ <%= @restaurant.address %></p>
        <p>☎️ <small><%= @restaurant.phone_number %></small></p>
      </div>
    </div>
    <%= link_to 'add a review', new_restaurant_review_path(@restaurant), class: 'btn btn-success'  %>
    <br><br>
    <ul class="list-group">
      <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item">
          <p><%= review.content %></p>
          <p><small>rating:<%='⭐️' * review.rating  %></small></p>
        </li>
      <% end %>
    </ul>
    <br>
    <%= link_to 'to Restaurants', restaurants_path, class: 'btn btn-primary'  %>
  </div>
</div>

